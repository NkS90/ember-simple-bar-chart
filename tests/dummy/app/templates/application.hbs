{{! Use flex
1. One is for getting the data from user
  1.1 Data and chat propertie
    0.1 Data properties
      1.Length of the data:
      2. label and value
    0.2 Chart properties
       height
       width
       barColor
2. Plotting chart

}}

<div class="flex-container">
  <div class="raw-item">
    
    <form>
      <legend>ember-simple-bar-chart</legend>
      <hr>

      
      <p>Chart properties:</p>
      
      <div class="form-group row">
        <label for="chart-with" class="col-md-2 col-form-label">width</label>
        <div class="col-md-6">
          {{input type="number" class="form-control" id="chart-width" placeholder="ex: 100" value=model.width}}
        </div>
      </div>
      <div class="form-group row">
        <label for="chart-height" class="col-md-2 col-form-label">height</label>
        <div class="col-md-6">
          {{input type="number" class="form-control" id="chart-height" placeholder="ex: 100" value=model.height}}
        </div>
      </div>
      <div class="form-group row">
        <label for="bar-color" class="col-md-2 col-form-label">Color</label>
        <div class="col-md-2">
          {{input type="color" class="form-control" id="bar-color"  value=model.barColor}}
        </div>
      </div>
      
      <div class="form-group row">
        <label for="chart-height" class="col-md-2 col-form-label">Data set</label>
        <div class="col-md-6">
          <select onchange={{action "setSelectedData" value="target.value"}}>
            {{#each sampleDataSets as |chartData|}}
              <option value={{chartData.value}}>{{chartData.label}}</option>
            {{/each}}
          </select>
        </div>
      </div>

    </form>
  </div>
  <div class="flex-item">
    {{ember-bar-chart height=model.height width=model.width data=model.data barColor=model.barColor}}
  </div>
</div>
